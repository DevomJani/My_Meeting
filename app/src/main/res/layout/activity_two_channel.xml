<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Container for video views -->
    <LinearLayout
        android:id="@+id/videoContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#000000">
    </LinearLayout>

    <!-- UID input field -->
    <EditText
        android:id="@+id/uidInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter UID for secondary camera"
        android:inputType="number"
        android:padding="8dp"
        android:background="@android:drawable/edit_text"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Buttons to start/stop and publish/unpublish secondary camera -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/startSecondCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Secondary Camera"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/publishSecondCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publish Secondary Camera" />
    </LinearLayout>

</LinearLayout>
